.section__title
	+main-title('Мои работы', 'works')

.portfolio__wrapper

	.column.column_left.portfolio__column.portfolio__column_left
		ul.slider__list
			li.slider__item.slider__item_active
				.work
					.work__preview
						img.work__pic(src=`assets/img/userfiles/portfolio1.png`)
					.work__desc
						.work__title.block-title Сайт школы онлайн образования
						.work__technology html, css, javascript
						a.work__link(href="#")
							svg.work__icon
								use(xlink:href='assets/img/sprite/sprite.svg#link')
							span Посмотреть сайт
			li.slider__item
				.work
					.work__preview
						img.work__pic(src=`assets/img/userfiles/portfolio2.png`)
					.work__desc
						.work__title.block-title Сайт школы
						.work__technology html, css
						a.work__link(href="#")
							svg.work__icon
								use(xlink:href='assets/img/sprite/sprite.svg#link')
							span Посмотреть сайт
			li.slider__item
				.work
					.work__preview
						img.work__pic(src=`assets/img/userfiles/portfolio3.png`)
					.work__desc
						.work__title.block-title Сайт
						.work__technology javascript
						a.work__link(href="#")
							svg.work__icon
								use(xlink:href='assets/img/sprite/sprite.svg#link')
							span Посмотреть сайт

	.column.column_right.portfolio__column.portfolio__column_right
		.work__slider.work-slider
			.work__prev.toggle.column.column_left
				a.toggle__link.toggle__link_prev(href="#")
					svg.toggle__icon
						use(xlink:href='assets/img/sprite/sprite.svg#portf_arrow_down')
					img.work-slider__img.work-slider__img_prev(src="")

			.work__next.toggle.column.column_right
				a.toggle__link.toggle__link_next(href="#")
					svg.toggle__icon
						use(xlink:href='assets/img/sprite/sprite.svg#portf_arrow_up')
					.btn-slider__list.btn-slider__list_next
						img.btn-slider__img.btn-slider__img_current(src="")
						img.btn-slider__img.btn-slider__img_next(src="")
